    script.
        var player = null
        $(document).ready(function() {
            $('#myModal').on('hidden.bs.modal', function(e) {
                if (player && palyer.pause) player.pause()

            })


            $('.card-img-top').click(function(e) {
                var image = $(this).attr('src')
                var video = $(this).data('video')

                $('#myModal').modal('show')


                if (!player) {
                    player = new DPlayer({
                        container: document.getElementById('videoModal'),
                        screenshot: true,
                        video: {
                            url: video,
                            pic: image,
                            thumbnails: image
                        }
                    })
                } else {
                    player.switchVideo({
                        url: video,
                        pic: image,
                        type: 'auto'
                    })
                }
            })
        })